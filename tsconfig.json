{
	"compilerOptions": {
		"outDir": "./lib",
		"target": "es6",
		"module": "commonjs",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"removeComments": true,
		"declaration": true,
		"sourceMap": true,
		"noEmit": true,
		"jsx": "react"
	},
	"include": [
		"./src/**/*.tsx",
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}